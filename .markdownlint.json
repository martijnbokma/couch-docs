{
  "default": true,
  "MD001": false,
  "MD003": { "style": "atx" },
  "MD004": { "style": "dash" },
  "MD007": { "indent": 2 },
  "MD013": false,
  "MD024": false,
  "MD025": {
    "front_matter_title": ""
  },
  "MD026": {
    "punctuation": ".,;:!。，；：！"
  },
  "MD029": false,
  "MD031": true,
  "MD032": true,
  "MD033": {
    "allowed_elements": [
      "Card",
      "CardGrid",
      "YouTubeCard",
      "LinkButton",
      "Steps",
      "FileTree",
      "note",
      "tip",
      "caution",
      "danger",
      "code",
      "h4",
      "s"
    ]
  },
  "MD035": { "style": "---" },
  "MD036": false,
  "MD037": false,
  "MD039": true,
  "MD040": false,
  "MD041": false,
  "MD042": false,
  "MD045": false,
  "MD046": false,
  "MD048": { "style": "backtick" },
  "MD049": { "style": "asterisk" },
  "MD050": { "style": "asterisk" },
  "link_style": {
    "inline": "**",
    "inline_italic": "*",
    "inline_bold_italic": "***"
  },
  "no_space_in_code": true,
  "no_inline_escapes": true,
  "code_blocks": {
    "style": "fenced"
  },
  "code_inline": {
    "pattern": "\\b[\\w.-]+\\.(php|html|js|css|md|mdx|json|yml|yaml)\\b"
  }
} 